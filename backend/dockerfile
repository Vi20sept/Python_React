# Use an official Python runtime as a parent image


# Use Python 3.10 slim as base image
FROM python:3.11-slim

# Install ODBC driver for SQL Server without using apt-key
RUN apt-get update && \
    apt-get install -y curl gnupg2 apt-transport-https unixodbc-dev && \
    mkdir -p /etc/apt/keyrings && \
    curl -fsSL https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor -o /etc/apt/keyrings/microsoft.gpg && \
    echo "deb [arch=amd64 signed-by=/etc/apt/keyrings/microsoft.gpg] https://packages.microsoft.com/debian/11/prod bullseye main" > /etc/apt/sources.list.d/mssql-release.list && \
    apt-get update && ACCEPT_EULA=Y apt-get install -y msodbcsql17 && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy project files
COPY . .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Expose Flask port
EXPOSE 5000

# Set environment variables
ENV DB_USER=python-web-app1-server-admin \
    DB_PASSWORD=Pandiyan@3021 \
    DB_SERVER=python-web-app1-server.database.windows.net \
    DB_NAME=Swiggy \
    SECRET_KEY=supersecretkey

# Start Flask app
CMD ["python", "app.py"]






